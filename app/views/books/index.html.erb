<h1 class="title">Available Books</h1>

<% if @books.any? %>
  <div class="book-container">
    <% @books.each do |book| %>
      <div class="book-card">
        <h3><%= link_to book.title, book_path(book), class: "book-title" %></h3>
        <p class="book-author">by <%= book.author %></p>
        <p class="book-status">
          <% if book.borrowings.where(returned_at: nil).none? %>
            <span class="available">Available</span>
          <% else %>
            <span class="borrowed">Borrowed</span>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="no-books">No books available.</p>
<% end %>

<style>
/* General Page Styling */
body {
  font-family: Arial, sans-serif;
  background-color: #f4f4f4;
  margin: 0;
  padding: 20px;
}

/* Title Styling */
.title {
  text-align: center;
  font-size: 28px;
  margin-bottom: 20px;
}

/* Books Container (Grid Layout) */
.book-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20px;
  padding: 20px;
}

/* Book Cards */
.book-card {
  width: 220px;
  background: #fff;
  border-radius: 10px;
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
  padding: 15px;
  text-align: center;
  transition: transform 0.2s;
}

.book-card:hover {
  transform: scale(1.05);
}

/* Book Title */
.book-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
  color: #333;
  text-decoration: none;
}

/* Author Styling */
.book-author {
  font-size: 14px;
  color: #777;
  margin-bottom: 10px;
}

/* Book Availability Status */
.book-status {
  font-size: 14px;
  margin-top: 5px;
  font-weight: bold;
}

.available {
  color: green;
}

.borrowed {
  color: red;
}
</style>
