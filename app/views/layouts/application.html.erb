<!DOCTYPE html>
<html>
<head>
  <title>LibraryApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_importmap_tags %>

  <style>
    /* Navbar Styling */
    .navbar {
      background: #2c3e50;
      padding: 15px 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: white;
      font-size: 16px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Navbar Container */
    .navbar-container {
      width: 90%;
      max-width: 1100px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    /* Navbar Links */
    .navbar a {
      color: white;
      text-decoration: none;
      margin: 0 15px;
      transition: 0.3s;
    }

    .navbar a:hover {
      color: #f1c40f;
    }

    /* Navbar Auth Section */
    .navbar-auth {
      display: flex;
      align-items: center;
    }

    /* Main Content Styling */
    main {
      padding: 20px;
    }
  </style>
</head>

<body>
  <header>
    <nav class="navbar">
      <div class="navbar-container">
        <div class="navbar-links">
          <%= link_to "Home", root_path %>
          <% if current_user %>
            <%= link_to "Profile", user_profile_path %>
          <% end %>
        </div>

        <div class="navbar-auth">
          <% if current_user %>
            <%= link_to "Log Out", session_path, method: :delete %>
          <% else %>
            <%= link_to "Sign Up", new_user_path %>
            <%= link_to "Log In", new_session_path %>
          <% end %>
        </div>
      </div>
    </nav>
  </header>

  <main>
    <%= yield %>
  </main>
</body>
</html>
